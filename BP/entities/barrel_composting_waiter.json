{
	"format_version": "1.19.50",
	"minecraft:entity": {
		"description": {
			"identifier": "exnihilo:barrel_composting_waiter",
			"is_summonable": true
		},
		"component_groups": {
			"despawn": {
				"minecraft:instant_despawn": {
					"remove_child_entities": true
				}
			}
		},
		"components": {
			"minecraft:collision_box": {
				"height": 0.1,
				"width": 0.1
			},
			"minecraft:custom_hit_test": {
				"hitboxes": [
					{
						"height": 0,
						"pivot": [0, 0, 0],
						"width": 0
					}
				]
			},
			"minecraft:physics": {
				"has_collision": false,
				"has_gravity": false
			},
			"minecraft:environment_sensor": {
				"triggers": {
					"filters": {
						"test": "in_block",
						"value": "air"
					},
					"event": "despawn"
				}
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "all",
					"deals_damage": false
				}
			},
			"minecraft:fire_immune": true,
			"minecraft:timer": {
				"looping": false,
				"time": [30, 30],
				"time_down_event": {
					"event": "exnihilo:dirt"
				}
			}
		},
		"events": {
			"despawn": {
				"add": {
					"component_groups": ["despawn"]
				}
			},
			"exnihilo:dirt": {
				"run_command": {
					"command": ["/scriptevent exnihilo:barrel_trigger transformToDirt"]
				},
				"trigger": "despawn"
			}
		}
	}
}
